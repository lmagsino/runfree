# ============================================
# RunFree Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# --------------------------------------------
# Database (PostgreSQL)
# --------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/runfree_development
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/runfree_test

# --------------------------------------------
# Redis
# --------------------------------------------
REDIS_URL=redis://localhost:6379/0

# --------------------------------------------
# Rails API (apps/api)
# --------------------------------------------
RAILS_ENV=development
RAILS_MASTER_KEY=
SECRET_KEY_BASE=
API_PORT=3000

# --------------------------------------------
# Python AI Service (apps/ai-service)
# --------------------------------------------
AI_SERVICE_PORT=8000
ANTHROPIC_API_KEY=

# --------------------------------------------
# React Web (apps/web)
# --------------------------------------------
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3001

# --------------------------------------------
# Node.js Realtime (apps/realtime)
# --------------------------------------------
REALTIME_PORT=3001
JWT_SECRET=

# --------------------------------------------
# OAuth (optional)
# --------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
